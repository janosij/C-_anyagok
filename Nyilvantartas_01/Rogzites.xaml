<Window x:Class="Nyilvantartas_01.Rogzites"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyilvantartas_01"
        mc:Ignorable="d"
        Title="Rögzítés" Height="450" Width="500" FontSize="14" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Jöjjenek a feliratok az első oszlopba-->
        <TextBlock Text="Adóazonosító jel" Grid.Row="0"  Margin="5,0,5,0" VerticalAlignment="Center"/>
        <TextBlock Text="Név" Grid.Row="1"  Margin="5,0,5,0" VerticalAlignment="Center"/>
        <TextBlock Text="Szervezeti egység" Grid.Row="2"  Margin="5,0,5,0" VerticalAlignment="Center"/>
        <TextBlock Text="Éves szabadság" Grid.Row="3"  Margin="5,0,5,0" VerticalAlignment="Center"/>
        <TextBlock Text="Beosztás" Grid.Row="4"  Margin="5,0,5,0" VerticalAlignment="Center"/>
        <TextBlock Text="Felvétel dátuma" Grid.Row="5"  Margin="5,0,5,0" VerticalAlignment="Center"/>
        <!--Jöjjenek a vezérlők a második oszlopba, figyeljünk arra, 
        hogy a Bindingok a másik ablakban alkalmazott nevek legyenek! 
        Kivétel a szervezeti egység-->
        <TextBox x:Name="txtAdojel" Grid.Row="0" Grid.Column="1" Text="{Binding Adoazonositojel}" Height="30" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtNev" Grid.Row="1" Grid.Column="1" Text="{Binding Nev}" Height="30" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="cboSzerve" Grid.Row="2" Grid.Column="1" SelectedItem="{Binding Szervezetiegyseg}" Height="30" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtEvessz" Grid.Row="3" Grid.Column="1" Text="{Binding Evesszabadsag}" Height="30" VerticalContentAlignment="Center"/>
        <TextBox x:Name="txtBeosztas" Grid.Row="4" Grid.Column="1" Text="{Binding Beosztas}" Height="30" VerticalContentAlignment="Center"/>
        <DatePicker x:Name="dtpfelvd" Grid.Row="5" Grid.Column="1" SelectedDate="{Binding Felveteldatuma}" Height="30" VerticalContentAlignment="Center"/>

        <!--Végül jöjjenek a gombok-->
        <WrapPanel Grid.ColumnSpan="2" Grid.Row="6" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnOk" Content="Ok" Height="30" Width="120" Margin="0,0,10,0" Click="btnOk_Click" />
            <Button x:Name="btnMegsem" Content="Mégsem" Height="30" Width="120" Margin="10,0,0,0" Click="btnMegsem_Click"/>
        </WrapPanel>

    </Grid>

</Window>
