<Window x:Class="Nyilvantartas_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyilvantartas_01"
        mc:Ignorable="d"
       Title="Dolgozói adatok" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--Definiáltuk a sorokat-->
        <!--Majd létrehozunk egy groupboxot, amelyben szintén gridben tárolunk mindent-->
        <GroupBox Header="Keresés" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition MinWidth="120" MaxWidth="220"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Adóazonosító jel:" VerticalAlignment="Center"/>
                <TextBlock Text="Szervezeti egység:" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBox x:Name="txtAdoaz" Grid.Column="1" Margin="5"/>

                <!--A DisplayMemberPath="Nev"-el kiválasztjuk, hogy melyik propertyt szeretnénk megjeleníteni-->
                <ComboBox x:Name="cboSzervez" Grid.Row="1" Grid.Column="1" Margin="5" DisplayMemberPath="Nev"/>

                <!--A keresés meg a feltétel törlése gombot egy wrappanelbe szervezzük ki-->
                <WrapPanel Grid.Column="2" Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button x:Name="btnKereses" Content="Keresés" Height="30" Width="120" Margin="0,0,10,0" Click="btnKereses_Click"/>
                    <Button x:Name="btnFelttor" Content="Feltétel törlése" Height="30" Width="120" Margin="10,0,0,0" Click="btnFelttor_Click"/>
                </WrapPanel>
            </Grid>
        </GroupBox>

        <!--Most jön a Datagrid egyedi mezőnevekkel és csak olvasható móddal, ne írkáljuk át a datagridben az adatokat-->
        <DataGrid x:Name="dg" Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="False" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Adóazonosító jel" Width="110" Binding="{Binding Adoazonositojel}"/>
                <DataGridTextColumn Header="Név" Width="210" Binding="{Binding Nev}"/>
                <DataGridTextColumn Header="Szervezeti egység" Width="120" Binding="{Binding Szervezetiegyseg.Nev}"/>
                <DataGridTextColumn Header="Éves szabadság" Width="100" Binding="{Binding Evesszabadsag}"/>
                <DataGridTextColumn Header="Beosztás" Width="130" Binding="{Binding Beosztas}"/>
                <DataGridTextColumn Header="Felvétel dátuma" Width="120" Binding="{Binding Felveteldatuma, StringFormat=yyyy.MM.dd}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--Majd jöjjön még pár gomb-->
        <WrapPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnUj" Content="Új dolgozó" Height="30" Width="120" Margin="0,0,10,5" Click="btnUj_Click" />
            <Button x:Name="btnModositas" Content="Módosítás" Height="30" Width="120" Margin="10,0,10,5" Click="btnModositas_Click"/>
            <Button x:Name="btnTorles" Content="Törlés" Height="30" Width="120" Margin="10,0,0,5" Click="btnTorles_Click"/>
        </WrapPanel>

    </Grid>

</Window>
