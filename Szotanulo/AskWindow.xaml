<Window x:Class="Szotanulo.AskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szotanulo"
        mc:Ignorable="d"
        Title="AskWindow" Height="300" Width="300">
    <StackPanel>
        <Label x:Name="hun" FontSize="20" Margin="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="tb" TextWrapping="Wrap" Margin="10" Text=""  FontSize="20"/>
        <Button x:Name="btn" Content="Elküld" Margin="10" FontSize="20" Click="btn_Click"/>
    </StackPanel>
</Window>
