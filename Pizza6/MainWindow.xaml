<Window x:Class="Pizza6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="84*"/>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="145*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="351*"/>
            <ColumnDefinition Width="449*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cb" HorizontalAlignment="Left" SelectedIndex="0" Margin="31,0,0,0" VerticalAlignment="Center" Width="120" Height="22">
            <ComboBoxItem Content="Piedone"/>
            <ComboBoxItem Content="Magyaros"/>
            <ComboBoxItem Content="Nápoly"/>
            <ComboBoxItem Content="Hawaii"/>
        </ComboBox>
        <GroupBox Header="Alap" Margin="10" Grid.Row="1">
            <StackPanel>
                <RadioButton x:Name="rb1" Content="Paradicsom" IsChecked="True" Margin="10"/>
                <RadioButton x:Name="rb2" Content="Tejföl" Margin="10,0,0,0"/>
            </StackPanel>
        
        </GroupBox>
        <GroupBox Header="Extrák" Grid.Row="2" Margin="10,0,10,0">
            <StackPanel>
                <CheckBox Content="Chili" x:Name="cb1" Margin="10,5,0,0"/>
                <CheckBox Content="Sajt" x:Name="cb2" Margin="10,5,0,0"/>
                <CheckBox Content="Avokádó" x:Name="cb3" Margin="10,5,0,0"/>
            </StackPanel>
            
        </GroupBox>
        <TextBox x:Name="txt" HorizontalAlignment="Left" Margin="20,27,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="25,70,0,0" Grid.Row="3" VerticalAlignment="Top" Click="Button_Click"/>
        <ListBox Grid.Column="1" Grid.RowSpan="3" Margin="5" Name="lb"/>
        <Button Grid.Column="1" Content="Töröl" HorizontalAlignment="Left" Margin="32,33,0,0" Grid.Row="3" VerticalAlignment="Top" Click="Button_Click_1"/>



    </Grid>
</Window>
